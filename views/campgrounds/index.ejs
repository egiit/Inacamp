<%- include("../partials/header") %>


<div class="container">
    <header class="jumbotron">
        <h1 class="display-3 font-weight-bold">Welcome To InaCamp</h1>
        <p>
            View our hand-pick Campgrounds from all Over Indonesia
        </p>
        <a href="campgrounds/new" class="btn btn-primary btn-sm">Add New Campground</a>
    </header>
   
    <div class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular CampGround</h3>
        </div>
    </div>

    <div class="row text-center">
        <% campgrounds.forEach(function(campground){%>
        <div class="col-md-3 col-sm-6 my-1">
            <div class="img-thumbnail">
                <img class="img-thumbnail border-0" src="<%= campground.image %>" alt="">
                <div class="caption">
                    <h4><%= campground.name %></h4>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More Info</a>
                </div>
            </div>
        </div>
        
        <% }); %>
    </div>
 
    
    <a href="/">Home Page</a>
</div>


<%- include("../partials/footer") %>