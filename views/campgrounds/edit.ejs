<%- include("../partials/header") %>
<div class="container">
    <div class="row text-center justify-content-md-center">
        <div class="col-md-6">
            <h2 class="">Edit <%= campground.name %></h2>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-4 p-2">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group mt-3">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[image]" value="<%= campground.image %>" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[description]" value="<%= campground.description %>" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds/<%= campground.id %>">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>