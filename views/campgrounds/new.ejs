<%- include("../partials/header") %>
<div class="container">
    <div class="row text-center justify-content-md-center">
        <div class="col-md-6">
            <h2 class="">Tambah Tempat Camping Baru</h2>
        </div>
    </div>
    <div class="row justify-content-md-center">
        <div class="col-md-4 p-2">
            <form action="/campgrounds" method="POST">
                <div class="form-group mt-3">
                    <input class="form-control" type="text" name="name" placeholder="Nama Tempat" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="Price" min="0.01" step="0.01" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Gambar" id="">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Desc" id="">
                </div>
                <div class="form-group">
                    <button class="btn btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>